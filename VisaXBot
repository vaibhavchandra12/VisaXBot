_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $VISA_REPO == "VisaXBot" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL2NhbGxtZXZwL1Zpc2FYLVVCL2FyY2hpdmUvbWFzdGVyLnppcA==" | base64 -d
    elif [[ $VISA_REPO == "VisaXBot" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL2NhbGxtZXZwL1Zpc2FYLVVCL2FyY2hpdmUvbWFzdGVyLnppcA==" | base64 -d
    elif [[ $VISA_REPO =~ $regex ]]
    then
        if [[ $VISA_REPO_BRANCH ]]
        then
            echo "${VISA_REPO}/archive/${VISA_REPO_BRANCH}.zip"
        else
            echo "${VISA_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL2NhbGxtZXZwL1Zpc2FYLVVCL2FyY2hpdmUvbWFzdGVyLnppcA==" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="VisaXBot.zip"
    echo "  Downloading VisaXBot Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    VISAPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  VisaXBot Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $VISAPATH
    echo "    ðŸ”®Starting VÃ®sÃ£áºžÃ¸â€ ðŸ”®     "
    echo "
    VisaXBot
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m VisaXBot
}

_set_bot
